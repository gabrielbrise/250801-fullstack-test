{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // Modern ESM settings for Node.js
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",

    // Output
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Typechecking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,

    // Import alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Node types
    "types": ["node", "jest"],

    // Performance
    "skipLibCheck": true,

    // Allow synthetic default imports
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
